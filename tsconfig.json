{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "outDir": "dist",
    "allowJs": true
  },
  "exclude": ["dist", "node_modules", "test"],
  "include": ["**/*"]
}
